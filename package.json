{
  "name": "makethen",
  "version": "0.2.2",
  "description": "Promisify Node.js-style callbacks with native Promise",
  "keywords": "promise, promisify, callback",
  "homepage": "https://github.com/deepsweet/makethen",
  "repository": "deepsweet/makethen",
  "author": "Kir Belevich <kir@belevi.ch> (https://twitter.com/deepsweet)",
  "license": "MIT",
  "files": [
    "build/"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/preset-typescript": "^7.0.0-beta.44",
    "@babel/register": "^7.0.0-beta.44",
    "@start/cli": "^0.1.0-4",
    "@start/plugin-find": "^0.1.0-3",
    "@start/plugin-lib-babel": "^0.1.0-0",
    "@start/plugin-lib-codecov": "^0.1.0-0",
    "@start/plugin-lib-eslint": "^0.1.0-2",
    "@start/plugin-lib-istanbul": "^0.1.0-2",
    "@start/plugin-lib-npm-publish": "^0.1.0-0",
    "@start/plugin-lib-npm-version": "^0.1.0-0",
    "@start/plugin-lib-tape": "^0.1.0-1",
    "@start/plugin-lib-typescript-generate": "^0.1.0-1",
    "@start/plugin-overwrite": "^0.1.0-2",
    "@start/plugin-parallel": "^0.1.0-3",
    "@start/plugin-read": "^0.1.0-2",
    "@start/plugin-remove": "^0.1.0-1",
    "@start/plugin-rename": "^0.1.0-2",
    "@start/plugin-sequence": "^0.1.0-1",
    "@start/plugin-watch": "^0.1.0-2",
    "@start/plugin-write": "^0.1.0-3",
    "@start/reporter-verbose": "^0.1.0-2",
    "@types/node": "^9.6.5",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "esm": "^3.0.20",
    "tap-diff": "^0.1.1",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0"
  },
  "start": {
    "require": [
      "esm",
      [
        "@babel/register",
        {
          "extensions": [
            ".ts",
            ".js"
          ]
        }
      ]
    ],
    "reporter": "@start/reporter-verbose"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "modules": false
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "standard",
      "node",
      "promise"
    ],
    "extends": [
      "standard",
      "plugin:node/recommended",
      "plugin:promise/recommended"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off",
      "space-infix-ops": "off",
      "node/no-unsupported-features": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ],
      "promise/avoid-new": "off"
    }
  }
}
