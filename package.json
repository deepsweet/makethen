{
  "name": "makethen",
  "version": "0.2.2",
  "description": "Promisify Node.js-style callbacks with native Promise",
  "keywords": "promise, promisify, callback",
  "homepage": "https://github.com/deepsweet/makethen",
  "repository": "deepsweet/makethen",
  "author": "Kir Belevich <kir@belevi.ch> (https://twitter.com/deepsweet)",
  "license": "MIT",
  "files": [
    "build/"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "@deepsweet/start-preset-node-ts-lib": "^0.1.0-5",
    "@types/node": "^10.3.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "typescript": "^2.9.1",
    "typescript-eslint-parser": "^16.0.0"
  },
  "eslintConfig": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "standard",
      "node",
      "promise"
    ],
    "extends": [
      "standard",
      "plugin:node/recommended",
      "plugin:promise/recommended"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "no-undef": "off",
      "no-unused-vars": "off",
      "space-infix-ops": "off",
      "node/no-unsupported-features": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ],
      "promise/avoid-new": "off"
    }
  }
}
